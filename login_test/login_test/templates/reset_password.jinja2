{% extends "layout.jinja2" %}

{% block subtitle %}Reset{% endblock %}

{% block content %}
<form action="{{request.route_url('reset_password')}}" method='POST'>
    <label for='password'>Password:</label>
    <input  placeholder='Enter Password'
            type='password'
            name='password'
            required
    />
    </br>
  
    <label for='reenter_password'>Re-Enter Password:</label>
    <input  placeholder='Re-enter Password'
                type='password'
                name='reenter_password'
                required
    />
    </br>
    <button type='submit' name='form.submitted'>Submit</button>
  
  </form>
  {{message}}
  
{% endblock content %}